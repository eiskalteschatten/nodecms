{% extends "dashboard/mainBody.njk" %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block content %}

<div class="uk-margin uk-card uk-card-default">
    <div class="uk-card-header">
        <h2 class="uk-card-title"><i class="fas fa-image text-icon-left"></i>{{ pageTitle }}</h2>
    </div>

    <div class="uk-card-body">
        <div uk-grid>
            <div class="uk-width-2-3@m media-preview">
                {% if mediaFile.display.display == "file" and mediaFile.fileType == "image" %}
                    <img src="{{ pathToFiles }}/{{ mediaFile.fileName }}" alt="{{ mediaFile.name }}">

                {% elseif mediaFile.display.display == "iframe" %}
                    <iframe src="{{ pathToFiles }}/{{ mediaFile.fileName }}"></iframe>

                {% elseif mediaFile.display.display == "file" and mediaFile.fileType == "audio" %}
                    <audio controls>
                        <source src="{{ pathToFiles }}/{{ mediaFile.fileName }}" type="{{ mediaFile.mimeType }}">
                        Could not load audio file.
                    </audio>

                {% elseif mediaFile.display.display == "file" and mediaFile.fileType == "video" %}
                    <video controls>
                        <source src="{{ pathToFiles }}/{{ mediaFile.fileName }}" type="{{ mediaFile.mimeType }}">
                        Could not load video file.
                    </video>

                {% elseif mediaFile.display.display == "fallbackImage" %}
                    <img src="/img/{{ mediaFile.display.fallbackImage }}" alt="{{ mediaFile.name }}">

                {% else %}
                    <div class="uk-text-center">
                        {{ mediaFile.name }}
                    </div>
                {% endif %}

                <div class="uk-margin">
                    <a href="{{ pathToFiles }}/{{ mediaFile.fileName }}" class="uk-button uk-button-default" target="_blank">
                        <i class="fas fa-external-link-square-alt text-icon-left"></i>Open file in new window
                    </a>
                </div>
            </div>

            <div class="uk-width-1-3@m">
                <div class="uk-card uk-card-default">
                    <div class="uk-card-body">
                        <div class="uk-margin">
                            <label class="uk-form-label">Name</label>
                            <input type="text" value="{{ mediaFile.name }}" name="name" class="uk-input" placeholder="Name" required>
                        </div>

                        <div class="uk-margin">
                            <label class="uk-form-label">Caption</label>
                            <input type="text" value="{{ mediaFile.caption }}" name="caption" class="uk-input" placeholder="Caption">
                        </div>

                        <div class="uk-margin">
                            <label class="uk-form-label">Description</label>
                            <textarea class="uk-textarea" name="description" placeholder="Description">{{ mediaFile.description }}</textarea>
                        </div>

                        <div class="uk-margin">
                            <label class="uk-form-label">Categories</label>
                            {% include "dashboard/components/categorySelection.njk" %}
                        </div>

                        <div class="uk-margin">
                            <label class="uk-form-label">Tags</label>
                            {% include "dashboard/components/tagSelection.njk" %}
                        </div>

                        <hr>

                        <div class="uk-margin uk-text-small">
                            <ul class="uk-list">
                                <li><strong>Slug:</strong> /{{ mediaFile.slug }}</li>
                                <li><strong>MIME Type:</strong> {{ mediaFile.mimeType }}</li>
                                <li><strong>File name:</strong> {{ mediaFile.fileName }}</li>
                            </ul>
                        </div>
                    </div>

                    <div class="uk-card-footer">
                        <div class="uk-margin uk-text-right">
                            <button class="uk-button uk-button-primary"><i class="fas fa-save text-icon-left"></i>Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="file-upload-overlay js-file-upload-overlay uk-light uk-hidden">
    <div class="uk-overlay-primary uk-position-cover">
        <div class="uk-position-center">
            <span uk-overlay-icon></span>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ super() }}

    <script type="text/javascript" src="/js/dashboard/media.js"></script>
{% endblock %}

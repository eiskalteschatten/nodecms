{% for exhibition in exhibitions %}
  {% set editLink = "/dashboard/exhibitions/edit/" + exhibition.slug %}

  <tr>
    <td class="item-row js-item-row" data-edit-link="{{ editLink }}">
      {{ exhibition.name }}
      <div class="uk-text-meta">{{ exhibition.description }}</div>
    </td>
    <td class="uk-text-right">
      {% include "dashboard/components/itemEditButtons.njk" %}
    </td>
  </tr>
{% else %}
  <tr>
    <td>
      <div class="uk-text-meta">There are no exhibitions.</div>
    </td>
    <td></td>
  </tr>
{% endfor %}
